namespace zerobuf.render;

table Color
{
    r: float;
    g: float;
    b: float;
}

table Material {
    index: int;
    diffuseColor : Color;
    specularColor: Color;
    specularExponent: float;
    reflectionIndex : float;
    opacity: float;
    refractionIndex: float;
    lightEmission: float;
}
